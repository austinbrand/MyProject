<div class="container">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox" style="height: 600px;">
            <div class="item active">
                <img src="~/Images/crystalCafeActualStore.jpg" alt="First slide" style="width: 100%">
                <div class="carousel-caption">
                    <h3>Welcome to the Crystal Cafe!</h3>
                    <p>This is the front of our restaurant!</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/crystalCafeFunnyMenuSpecial.jpg" alt="Second slide" style="width: 100%">
            </div>
            <div class="item">
                <img src="~/Images/crystalCafeCheeseBurgerAndSlaw.jpg" alt="Third slide" style="width: 100%">
                <div class="carousel-caption">
                    <h3>Menu Item: Cheeseburger</h3>
                    <p>Our Cheeseburger! Comes with a side of fries and cole slaw!</p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Menu</h2>
        <p>Come take a look at our delicious menu consisting of hamburgers, eggs, and much more!</p>
        <button>
            @Html.ActionLink("Menu", "Index", "CustomerMenu")
        </button>
        <!-- <button type="button" href="/menu" id="menu">Menu</button> -->

    </div>
    <div class="col-md-4">
        <h2>Create Account</h2>
        <p>If you don't have an account with us already click to create your account and begin ordering!</p>
        <button>
            @Html.ActionLink("Register", "Register", "Account")
        </button>
    </div>
    <div class="col-md-4">
        <h2>About</h2>
        <p>Check out what we are all about here at the Crystal Cafe!</p>
        <button>
            @Html.ActionLink("About Us", "About", "Home")
        </button>
    </div>
</div>

